{
  "name": "payload-nextjs-server",
  "description": "A boilerplate project for NextJS with Payload CMS",
  "keywords": [
    "payload",
    "cms",
    "nextjs"
  ],
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "author": "TRBL",
  "scripts": {
    "build:next": "next build",
    "predeploy" : "npm run build",
    "deploy" : "gh-pages -d build",
    "build:server": "tsc --project tsconfig.server.json",
    "build:payload": "payload build",
    "copyfiles:media": "copyfiles -u 1 media/**/*.{svg,jpg,png} dist/media",
    "build": "cross-env NODE_ENV=production yarn build:payload && yarn build:server && yarn copyfiles:media && yarn build:next && yarn serve",
    "dev": "ts-node server.ts",
    "seed": "ts-node seed/index.js",
    "serve": "cross-env NODE_ENV=production PAYLOAD_CONFIG_PATH=dist/payload.config.js node dist/server.js"
  },
  "dependencies": {
    "@faceless-ui/css-grid": "^1.2.0",
    "@faceless-ui/modal": "^2.0.1",
    "@faceless-ui/mouse-info": "^1.3.0",
    "@faceless-ui/scroll-info": "^1.3.0",
    "@faceless-ui/window-info": "^2.1.1",
    "bootstrap-icons": "^1.10.4",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "escape-html": "^1.0.3",
    "express": "^4.18.2",
    "jss-global": "^3.0.0",
    "jss-plugin-global": "^10.10.0",
    "jss-rtl": "^0.3.0",
    "mongoose": "^7.0.3",
    "next": "^13.2.3",
    "payload": "^1.6.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-jss": "^10.10.0",
    "react-toastify": "^9.1.2",
    "react-transition-group": "^4.4.5",
    "sass": "^1.52.0",
    "slate": "^0.72.8",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@trbl/eslint-config": "^1.2.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.15.11",
    "@types/react": "^16.9.56",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.16.0",
    "eslint-plugin-jest-dom": "^3.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "gh-pages": "^5.0.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.8.1",
    "typescript": "^5.0.3"
  }
}
